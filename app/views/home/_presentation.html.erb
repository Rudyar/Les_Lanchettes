<!-- Appartment -->
<section>
  <hr class="w-50 mt-5">
  <h2 class="section-header text-dark">L'APPARTEMENT</h2>
  <div class="container mt-3">
    <div class="row">

      <div class="col-md-6">
        <div class="card mb-4 shadow-sm appartment-card">
          <%= image_tag "home/salon-2.jpg" %>
          <div class="card-body">
            <p class="card-text">Orientation Sud et Est.</p>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card mb-4 shadow-sm appartment-card">
          <%= image_tag "home/salon-1.jpg" %>
          <div class="card-body">
            <p class="card-text">Grand salon lumineux.</p>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="container">
    <div class="row">
      
      <div class="col-md-6">
        <div class="card mb-4 shadow-sm appartment-card">
          <%= image_tag "home/chambre.jpg" %>
          <div class="card-body">
            <p class="card-text">Chambre avec vue sur le jardin.</p>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card mb-4 shadow-sm appartment-card">
          <%= image_tag "home/sdb-2.jpg" %>
          <div class="card-body">
            <p class="card-text">Salle de douche avec sèche cheveux. Toilettes séparées.</p>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col-md-6">
        <div class="card mb-4 shadow-sm appartment-card">
          <%= image_tag "home/jardin.jpg" %>
          <div class="card-body">
            <p class="card-text">Jardin privé avec BBQ.</p>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card mb-4 shadow-sm appartment-card">
          <div class="card-body">
            <h3 class="card-title text-center">Informations</h3>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Inclus : toutes les charges d'eau et d'électricité.</li>
              <li class="list-group-item">Les animaux ne sont pas acceptés.</li>
              <li class="list-group-item">Appartement non fumeur.</li>
              <li class="list-group-item">Connection Wifi incluse.</li>
              <li class="list-group-item">Chèques-Vacances acceptés.</li>
              <li class="list-group-item">En supplément : taxe de séjour (1.65 € / adulte / jour).</li>
              <li class="list-group-item">En option : location de draps (12€/personne) & ménage au départ (50€).</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</section>

<hr class="w-50 mt-5">

<!-- EQUIPEMENTS -->
