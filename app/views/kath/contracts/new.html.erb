<%= render 'kath/admin/navbar_admin' %>

<div class="container text-center">
  <h2 class="p-3">Créer un contrat</h2>

  <%= form_with(model: [:kath, @contract], local: true, class:"d-flex justify-content-center") do |f| %>

    <div class="form-group w-50">
      <%= f.label :nom %>
      <%= f.text_field :last_name, class: "form-control", placeholder:"BROGNARD" %>
      
      <%= f.label :prénom, class:"pt-2" %>
      <%= f.text_field :first_name, class: "form-control", placeholder:"Denis" %>

      <%= f.label :email, class:"pt-2"  %>
      <%= f.text_field :email, class: "form-control", placeholder:"denis.brognard@gmail.com" %>

      <%= f.label :adresse, class:"pt-2"  %>
      <%= f.text_field :address, class: "form-control", placeholder:"75 rue de la Chouette, 750015 PARIS" %>

      <%= f.label :numéro_de_téléphone, class:"pt-2"  %>
      <%= f.text_field :phone_number, class: "form-control", placeholder:"0681559135" %>

      <%= f.label :durée_du_séjour, class:"pt-2"  %>
      <%= f.text_field :duration, class: "form-control", placeholder:"Du 12 au 19 août 2021" %>
            
      <%= f.label :prix_du_séjour, class:"pt-2"  %>
      <%= f.number_field :price, min: 1, step: 1, class: "form-control", placeholder:"300" %>

      <br>
      <%= f.submit "Créer le contrat", class: " mt-3 btn btn-success" %>

  <% end %>
</div>

