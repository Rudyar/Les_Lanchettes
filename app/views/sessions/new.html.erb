<div class="container text-center w-50">
  <h4 class="text-center p-5"> Connexion </h4>
  <%= form_tag sessions_path do %>
    <div class="form-group p-1">
      <%= label_tag "Email" %><br/>
      <%= text_field_tag :email, '', size: 50 %>
    </div>
    <br/>
    <div class="form-group p-1">
      <%= label_tag "Password" %><br/>
      <%= password_field_tag :password, '', size: 50 %>
    </div>
    <div class="form-group p-1">
    <%= submit_tag "Se connecter", class:"btn btn-outline-success"%>
    </div>
  <% end %>
</div>